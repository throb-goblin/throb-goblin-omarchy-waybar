{
  // Global settings
  "margin-top": 2,
  "margin-left": 2,
  "margin-right": 2,
  "height": 35,
  "spacing": 0,

  // Module placement
  "modules-left": ["cpu", "memory", "temperature","hyprland/window"],
  "modules-center": ["hyprland/workspaces", "custom/update"],
  "modules-right": [
    "mpris",
    "custom/osk",
    "bluetooth",
    "network",
    "pulseaudio",
    "battery",
    "custom/omarchy",
    "clock"
