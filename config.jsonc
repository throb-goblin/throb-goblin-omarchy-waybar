  // ---------------------------------------------------------------- //
  // ------------------------- Left Modules ------------------------- //
  // ---------------------------------------------------------------- //
  "hyprland/window": {
    "format": "{}",
    "max-length": 30,
    "tooltip": false
  },
  "cpu": {
    "interval": 5,
    "format": "{usage}%",
    "on-click": "alacritty -e btop"
  },
  "memory": {
    "format": "{used:0.1f}G",
    "interval": 2,
    "on-click": "alacritty -e btop",
    "tooltip": false
  },
  "temperature": {
    "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format": "{temperatureC}Â°C",
    "tooltip": false
  },

  // ------------------------------------------------------------------ //
